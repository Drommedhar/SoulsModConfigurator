<UserControl x:Class="SoulsModConfigurator.Controls.ModEntryCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoulsModConfigurator.Controls"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             Margin="1"
             d:DesignHeight="65" d:DesignWidth="600" Background="#FF222327">
    <Grid>
        <CheckBox x:Name="CheckBoxEnabled"
                    Margin="5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Content="This is a mod name which is long"
                    IsChecked="False" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5">
            <Label x:Name="lblPreset" Content="Preset:" VerticalAlignment="Center" Margin="0,0,10,0" IsHitTestVisible="False"/>
            <ComboBox x:Name="Preset" VerticalAlignment="Center" MinWidth="150"/>
            <Button x:Name="btnConfigure" Content="Configure" />
        </StackPanel>

    </Grid>
</UserControl>
