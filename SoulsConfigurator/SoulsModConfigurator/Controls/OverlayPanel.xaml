<UserControl x:Class="SoulsModConfigurator.Controls.OverlayPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:SoulsModConfigurator.Controls"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="pnlOverlay"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Fade Out Animation -->
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetName="pnlOverlay"
                           Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    
    <Grid x:Name="pnlOverlay" Opacity="0">
        <Canvas x:Name="canvas" Background="{x:Null}">
            <controls:BackgroundPresenter Canvas.Left="0"
                                   Canvas.Top="0"
                                   Width="{Binding ActualWidth, ElementName=pnlOverlay, Mode=OneWay}"
                                   Height="{Binding ActualHeight, ElementName=pnlOverlay, Mode=OneWay}">
                <controls:BackgroundPresenter.Effect>
                    <BlurEffect Radius="10"/>
                </controls:BackgroundPresenter.Effect>
            </controls:BackgroundPresenter>
        </Canvas>
        <Rectangle Fill="#7F121214" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <!-- Loading/Processing Panel -->
        <StackPanel x:Name="LoadingPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image gif:ImageBehavior.AnimatedSource="https://static-cdn.jtvnw.net/emoticons/v2/emotesv2_c1fde6ec4ffe4f2396227883d34f1ca9/default/dark/1.0" Width="32" Height="32" />
                <Image gif:ImageBehavior.AnimatedSource="https://static-cdn.jtvnw.net/emoticons/v2/emotesv2_82659a2fbc144975b12d872877bee98b/default/dark/1.0" Width="32" Height="32" />
                <Label Content="Breathing life into your mods..." FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left"/>
            </StackPanel>

            <Label x:Name="lblStatus" Content="Status: Something really important will be displayed here. Yes yes!" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Download Progress Panel with FIXED WIDTH -->
        <Border x:Name="DownloadPanel"
                Background="#DD2D2D30"
                BorderBrush="#FF4472C4"
                BorderThickness="2"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="550"
                Visibility="Collapsed"
                Padding="30">
            <StackPanel Orientation="Vertical">
                <!-- Header with download GIF and title - FIXED WIDTH -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Image gif:ImageBehavior.AnimatedSource="https://static-cdn.jtvnw.net/emoticons/v2/emotesv2_42fe2f0cce6d4da085a4ec2e5962c386/default/dark/1.0" 
                           Width="32" Height="32" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtDownloadTitle"
                               Text="Downloading file 1 of 5"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               Width="450"
                               Margin="15,0,0,0"/>
                </StackPanel>

                <!-- File name and size info with FIXED WIDTHS -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock x:Name="txtDownloadFileName"
                               Text="example_mod.zip"
                               FontSize="16"
                               Foreground="#FFCCCCCC"
                               HorizontalAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               Width="450"
                               TextAlignment="Center"/>
                    <TextBlock x:Name="txtDownloadSize"
                               Text=""
                               FontSize="12"
                               Foreground="#FF888888"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Width="450"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Simple Progress Bar using standard WPF ProgressBar with FIXED WIDTH -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <!-- Progress bar with visual container - FIXED WIDTH to prevent resizing -->
                    <Border Background="#FF1E1E1E" 
                            BorderBrush="#FF404040" 
                            BorderThickness="2" 
                            CornerRadius="12"
                            Padding="4"
                            Margin="0,0,0,10"
                            Width="400"
                            HorizontalAlignment="Center">
                        <ProgressBar x:Name="downloadProgressBar"
                                     Height="18"
                                     Width="392"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="0"
                                     Background="#FF2D2D30"
                                     BorderThickness="0"
                                     HorizontalAlignment="Center">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8">
                                                    <Grid>
                                                        <!-- Background -->
                                                        <Border Background="#FF3F3F46" 
                                                                CornerRadius="8"/>
                                                        <!-- Progress fill -->
                                                        <Border Name="PART_Track" 
                                                                CornerRadius="8">
                                                            <Border Name="PART_Indicator" 
                                                                    Background="{TemplateBinding Foreground}"
                                                                    HorizontalAlignment="Left"
                                                                    CornerRadius="8"/>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FF4CAF50" Offset="0"/>
                                                <GradientStop Color="#FF66BB6A" Offset="0.5"/>
                                                <GradientStop Color="#FF4CAF50" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <!-- Indeterminate animation for unknown progress -->
                                    <Style.Triggers>
                                        <Trigger Property="IsIndeterminate" Value="True">
                                            <Setter Property="Foreground">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#FFFF9800" Offset="0"/>
                                                        <GradientStop Color="#FFFFC107" Offset="0.5"/>
                                                        <GradientStop Color="#FFFF9800" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>
                    </Border>
                    
                    <!-- Progress info -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="txtDownloadPercentage"
                                   Text="0.0%"
                                   FontSize="14"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="•"
                                   FontSize="14"
                                   Foreground="#FFCCCCCC"
                                   Margin="0,0,10,0"/>
                        <TextBlock x:Name="txtDownloadSpeed"
                                   Text="0 B/s"
                                   FontSize="14"
                                   Foreground="#FFCCCCCC"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Notification Panel -->
        <Border x:Name="NotificationPanel"
                Background="#DD2D2D30"
                BorderBrush="#FF4472C4"
                BorderThickness="2"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="400"
                MaxWidth="600"
                Visibility="Collapsed"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Close Button -->
                <Button x:Name="btnCloseNotification"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="24"
                        Height="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="✕"
                        Foreground="White"
                        FontSize="12"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Margin="0,0,0,10"
                        Click="BtnCloseNotification_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="12"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#44FF0000"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Notification Header with GIF -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Image x:Name="imgNotificationGif"
                           gif:ImageBehavior.AnimatedSource="https://static-cdn.jtvnw.net/emoticons/v2/emotesv2_3bddbb609de94c67a8ac7f6f898a844c/default/dark/1.0"
                           Width="32"
                           Height="32"
                           VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtNotificationTitle"
                               Text="Notification Title"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Notification Content -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="300">
                    <TextBlock x:Name="txtNotificationContent"
                               Text="Notification content goes here..."
                               FontSize="14"
                               Foreground="#FFCCCCCC"
                               TextWrapping="Wrap"
                               LineHeight="20"
                               Margin="0,0,0,15"/>
                </ScrollViewer>

                <!-- Notification Links -->
                <StackPanel x:Name="pnlNotificationLinks" Grid.Row="3" Orientation="Vertical" Visibility="Collapsed">
                    <!-- Links will be added dynamically -->
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
