<UserControl x:Class="SoulsModConfigurator.Controls.ModListCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoulsModConfigurator.Controls"
             xmlns:controls="clr-namespace:SoulsModConfigurator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Height="Auto"
           Width="Auto" BorderBrush="#FF222225" BorderThickness="1" Margin="5">
        <StackPanel Orientation="Vertical">
            <controls:ModEntryCtrl x:Name="ModEntry1" 
                    DockPanel.Dock="Top"
                      IsEnabled="{Binding IsEnabled, Mode=TwoWay}" />
            <controls:ModEntryCtrl x:Name="ModEntry2" 
                    DockPanel.Dock="Top"
                      IsEnabled="{Binding IsEnabled, Mode=TwoWay}" />
                                <controls:ModEntryCtrl x:Name="ModEntry3" 
                    DockPanel.Dock="Top"
                      IsEnabled="{Binding IsEnabled, Mode=TwoWay}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
