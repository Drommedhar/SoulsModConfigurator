<Window x:Class="SoulsModConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoulsModConfigurator"
        xmlns:ui="http://schemas.modernwpf.com/2019" 
        xmlns:controls="clr-namespace:SoulsModConfigurator.Controls"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="SoulsModConfigurator" Height="450" Width="800"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <TabControl>
            <TabItem VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Properties/ds1r.png" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Label Content="Dark Souls 1" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <controls:GameViewCtrl VerticalAlignment="Stretch" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Properties/ds2.png" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Label Content="Dark Souls 2" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <Label Content="Content goes here..." />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Properties/ds3.png" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Label Content="Dark Souls 3" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <Label Content="Content goes here..." />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Properties/sekiro.png" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Label Content="Sekiro" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <Label Content="Content goes here..." />
            </TabItem>

        </TabControl>

        <Grid x:Name="pnlOverlay" Visibility="Hidden">
            <Canvas x:Name="canvas" Background="{x:Null}">
                <controls:BackgroundPresenter Canvas.Left="0"
                                           Canvas.Top="0"
                                           Width="{Binding ActualWidth, ElementName=pnlOverlay, Mode=OneWay}"
                                           Height="{Binding ActualHeight, ElementName=pnlOverlay, Mode=OneWay}">
                    <controls:BackgroundPresenter.Effect>
                        <BlurEffect Radius="10"/>
                    </controls:BackgroundPresenter.Effect>
                </controls:BackgroundPresenter>
            </Canvas>
            <Rectangle Fill="#7F121214" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image gif:ImageBehavior.AnimatedSource="https://static-cdn.jtvnw.net/emoticons/v2/emotesv2_c1fde6ec4ffe4f2396227883d34f1ca9/default/dark/1.0" Width="32" Height="32" />
                    <Image gif:ImageBehavior.AnimatedSource="https://static-cdn.jtvnw.net/emoticons/v2/emotesv2_82659a2fbc144975b12d872877bee98b/default/dark/1.0" Width="32" Height="32" />
                    <Label Content="Breathing life into your mods..." FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                </StackPanel>

                <Label Content="Status: Something really important will be displayed here. Yes yes!" HorizontalAlignment="Center"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
