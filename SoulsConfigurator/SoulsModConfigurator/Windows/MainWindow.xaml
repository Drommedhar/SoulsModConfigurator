<Window x:Class="SoulsModConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoulsModConfigurator"
        xmlns:ui="http://schemas.modernwpf.com/2019" 
        xmlns:controls="clr-namespace:SoulsModConfigurator.Controls"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="SoulsModConfigurator" Height="450" Width="800"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <TabControl x:Name="tabControlGames" SelectionChanged="TabControlGames_SelectionChanged">
            <TabItem VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Properties/ds1r.png" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Label Content="Dark Souls 1" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <controls:GameViewCtrl x:Name="GameViewDS1" VerticalAlignment="Stretch" />
            </TabItem>
            <TabItem VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Properties/ds2.png" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Label Content="Dark Souls 2" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <controls:GameViewCtrl x:Name="GameViewDS2" VerticalAlignment="Stretch" />
            </TabItem>
            <TabItem VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Properties/ds3.png" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Label Content="Dark Souls 3" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <controls:GameViewCtrl x:Name="GameViewDS3" VerticalAlignment="Stretch" />
            </TabItem>
            <TabItem VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Properties/sekiro.png" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Label Content="Sekiro" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <controls:GameViewCtrl x:Name="GameViewSekiro" VerticalAlignment="Stretch" />
            </TabItem>

        </TabControl>

        <controls:OverlayPanel x:Name="pnlInfo" Visibility="Hidden"/>
    </Grid>
</Window>
